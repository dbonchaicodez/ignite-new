<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Development domains - cleartext allowed -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>
    </domain-config>
    
    <!-- Production domains - HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Add your production backend domain here -->
        <domain includeSubdomains="true">ignite-backend-eight.vercel.app</domain>
        
        <!-- Add your Vercel domains here -->
        <domain includeSubdomains="true">ignite-client.ritaban.me</domain>
        
        <!-- Cloudflare R2 domains -->
        <domain includeSubdomains="true">ignite-pdf.ritaban.me</domain>
        
        <!-- Google services for OAuth -->
        <domain includeSubdomains="true">accounts.google.com</domain>
        <domain includeSubdomains="true">oauth2.googleapis.com</domain>
        <domain includeSubdomains="true">www.googleapis.com</domain>
        <domain includeSubdomains="true">gstatic.com</domain>
        
        <!-- Google Sheets API -->
        <domain includeSubdomains="true">sheets.googleapis.com</domain>
    </domain-config>
</network-security-config>
