# MongoDB
MONGODB_URI=mongodb://localhost:27017/ignite

# JWT Secret
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Cloudflare R2 Configuration (Worker-based access for free plan)
CLOUDFLARE_WORKER_URL=https://your-worker.your-subdomain.workers.dev
CLOUDFLARE_WORKER_SECRET=use-same-value-as-JWT_SECRET-above
R2_BUCKET_NAME=ignite-pdfs

# Server Configuration
PORT=5000
NODE_ENV=development or production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id-here

# Google Sheets Configuration
APPROVED_USERS_SHEET_URL=your-google-sheets-url-here

# Client URLs (for CORS)
ADMIN_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Session/Security
SESSION_SECRET=your-session-secret-key

# Admin Credentials
ADMIN_USERNAME=your-admin-username-here
ADMIN_PASSWORD=your-secure-admin-password-here

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
